
{
  "designTokens": {
    "fontFamily": {
      "sans": ["'Inter'", "ui-sans-serif", "system-ui", "sans-serif"],
      "serif": ["ui-serif", "Georgia", "Cambria", "Times New Roman", "Times", "serif"],
      "mono": ["ui-monospace", "SFMono-Regular", "Menlo", "Monaco", "Consolas", "monospace"]
    },
    "colors": {
      "primary": "#00C2CB",
      "primary-dark": "#00A3AF",
      "secondary": "#CCFF00",
      "secondary-dark": "#b8e600",
      "secondary-light": "#e6ff80",
      "white": "#FFFFFF",
      "black": "#000000",
      "gray-100": "#F9FAFB",
      "gray-300": "#D1D5DB",
      "gray-600": "#4B5563",
      "gray-700": "#374151",
      "gray-800": "#1F2937",
      "cyan": "#00BFFF",
      "error": "#EF4444"
    },
    "spacing": {
      "card-width": "18rem",
      "card-height": "11rem",
      "gap-sm": "1rem",
      "gap-md": "1.5rem",
      "gap-lg": "2rem"
    },
    "borderRadius": {
      "sm": "0.375rem",
      "md": "0.5rem",
      "lg": "0.75rem",
      "full": "9999px"
    },
    "components": {
      "Button": {
        "primary": {
          "bg": "secondary",
          "text": "black",
          "hover": "secondary-dark",
          "padding": "px-6 py-3",
          "radius": "rounded-full",
          "font": "font-semibold"
        },
        "outline": {
          "border": "border-2 border-black",
          "bg": "transparent",
          "text": "black",
          "hover": "hover:bg-gray-100",
          "padding": "px-6 py-2",
          "radius": "rounded-full",
          "font": "font-semibold"
        }
      },
      "TripCard": {
        "width": "w-72",
        "imageHeight": "h-44",
        "padding": "p-4",
        "radius": "rounded-lg",
        "border": "border border-gray-200"
      },
      "Badge": {
        "spotlight": {
          "bg": "bg-secondary",
          "text": "text-white",
          "size": "text-xs",
          "padding": "px-2 py-1",
          "radius": "rounded-full",
          "position": "absolute top-3 left-3"
        }
      }
    }
  }
}
